        <div class = "home">
        <%=current_user.present? ? current_user.email : 'Please sign in' %>

        <% if current_user.present? %>
            <% if current_user.role == 'individual' %>
                
                    <h1>Welcome, <%= @individual.name %> </h1>
                    <%= button_to 'Profile'  , '/individuals/'+@individual.id.to_s ,class: "menu" , method: :get %>
                    <%= button_to 'View jobs' , '/individuals/'+@individual.id.to_s+'/jobs' ,class: "menu" , method: :get %>
                    <%= button_to 'View Application' , 'individual/'+@individual.id.to_s+'/individual_applications/' ,class: "menu" , method: :get %>
                    <%= button_to 'View Schedules' , '/individuals/'+@individual.id.to_s+'/accepted_offers' ,class: "menu" , method: :get %>

            <% end %> 
            <% if current_user.role == 'company' %>

                    <h1>Welcome, <%= @company.name %> </h1>
                    <%= button_to 'Profile'  , '/companies/'+@company.id.to_s ,class: "menu" , method: :get %>
                    <%= button_to 'Jobs' , '/companies/'+@company.id.to_s+'/jobs' ,class: "menu" , method: :get %>
                    <%= button_to 'Campus Applications', '/companies/'+@company.id.to_s.to_s+'/college_applications' ,class: "menu" , method: :get %>
                    <%= button_to 'Schedules' , 'companies/'+@company.id.to_s+'/accepted_offers' ,class: "menu" , method: :get %>
                </div>
            <% end %> 
            <% if current_user.role == 'college' %>
                    
                    <h1>Welcome, <%= @college.name %> </h1>
                    <%= button_to 'Profile'  , '/colleges/'+@college.id.to_s ,class: "menu" , method: :get %>

                    <% if current_user.permission.status=='Permitted'%>
                        <%= button_to 'Search Companies' , '/companies' ,class: "menu" , method: :get %>
                        <%= button_to 'Applications' , '/colleges/'+@college.id.to_s+'/college_applications/' ,class: "menu" , method: :get %>
                        <%= button_to 'Schedules' , 'colleges/'+@college.id.to_s+'/accepted_offers' ,class: "menu" , method: :get %>
                    
                    
                            <div class="course">
                                <%= render 'courses/index' %>
                            </div>

                            <div class="students">
                                <%= render 'students/index' %>
                            </div> 
                    <% else %>
                        <p> 'You are yet to be approved by the Admin' </p>
                    <% end %>
            <% end %>
            
        <% end %>
        </div>