            <div class="container">
                
                <div class= "comp_opt">
                    <h1>Your jobs!</h1>
                    <%  if current_user.role=='individual' %>
                        <%= button_to 'All Jobs' , '/individuals/'+current_user.individual.id.to_s+'/jobs' ,class: 'btn btn-primary' , method: :get %>
                    <% end %>
                    <%  if current_user.role=='company' %>
                        <%= button_to 'Add Jobs' , '/companies/'+current_user.company.id.to_s+'/jobs/new' ,class: 'btn btn-primary' , method: :get %>
                    <% end %>
                </div>
                <br>
                <% if !(@jobs.empty?) %>
                    <% @jobs.each do |job| %>
                        <div class="row shadow p-3 mb-5 bg-body-tertiary rounded" style='background-color: #e3f2fd;' >
                            <div class='container'>
                                <h4><%= job.name %></h4>
                                <p> <%= job.company.name %> </p>
                                <p><%= job.salary %> LPA</p>
                                <p><%= job.mode %></p>
                                <div class="row">
                                    <div class='col-md-4'>
                                        <%= button_to 'View Details' , '/companies/'+job.company_id.to_s+'/jobs/'+job.id.to_s ,class: 'btn btn-primary' , method: :get %>
                                    </div>
                                    <% if current_user.role== 'company' %>
                                        <div class='col-md-4'>
                                            <%= button_to 'Edit' , '/companies/'+job.company_id.to_s+'/jobs/'+job.id.to_s+'/edit' ,class: 'btn btn-primary' , method: :get %>
                                        </div>
                                        <div class='col-md-4'>
                                            <%= button_to 'Delete' , '/companies/'+job.company_id.to_s+'/jobs/'+job.id.to_s ,class: 'btn btn-primary' , method: :delete %>
                                        </div>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    <% end %>
                <% else %>
                    
                    <h4> Sorry! We couldn't find perfect matches. Try searching all jobs! </h4>
                <% end %>
                
            </div>