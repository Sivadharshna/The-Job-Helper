            <div class="container">
                
                <h1> Your Applications </h1>
                <br>
                <% if !@individual_applications.empty? %>
                    <% @individual_applications.each do |individual_application| %>
                        <div class="row shadow p-3 mb-5 bg-body-tertiary rounded">
                            <div class='container'>
                                <h5> <%= individual_application.job.name %> </h5>
                                <p> Company : <%= individual_application.job.company.name %> </p>
                                <% if current_user.role=='company'%>
                                    <p> Applicant Name: <%= individual_application.individual.name %></p>
                                <% end %>
                                <p> Salary : <%= individual_application.job.salary %> LPA</p>
                                <p> Mode of Work : <%= individual_application.job.mode %></p>
                                <p> Status :  <%= individual_application.status%></p>
                                

                                    <div class=row>
                                            <% if current_user.role=='company'%>
                                                <div class='col-md-4'> 
                                                    <%= button_to 'View Profile' , '/individuals/'+individual_application.individual.id.to_s ,class: 'btn btn-primary' , method: :get %>
                                                </div>
                                                <div class='col-md-4'>
                                                    <%= button_to 'Approve' , 'individual_applications/'+individual_application.id.to_s+'/accepted_offers/new' ,class: 'btn btn-success' , method: :get %>
                                                </div>
                                                <div class='col-md-4'>
                                                    <%= button_to 'Reject' , '/individual_applications/'+individual_application.id.to_s ,class: 'btn btn-danger' , method: :put %>
                                                </div>
                                            <% end %>
                                            <% if current_user.role=='individual'%>
                                                <% if individual_application.status=='Rejected' %>
                                                    <div class='col-md-6'> 
                                                        <%= button_to 'Delete' , '/individual_applications/'+individual_application.id.to_s ,class: 'btn btn-danger' , method: :delete %>
                                                    </div>
                                                <% end%>
                                            <% end %>
                                    </div>
                            </div>
                        </div>
                    <% end %>
                <% else %>
                    <% if current_user.role=='individual'%>
                        <h4> You have not applied for any jobs yet! Please check for jobs and grab your oppurtunity soon </h4>
                    <% elsif current_user.role=='company' %>
                        <h4> No Applications found </h4>
                    <% end %>
                <% end %>    
            </div>